<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Homework" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Homework.Movie" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@drawable/shape_rounded_dialog</item>
    </style>


    <style name="NewCollectionDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/CustomNewCollectionStyle</item>
    </style>


</resources>

