<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onBoarding2Fragment"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".load.OnBoarding2Fragment">

    <RelativeLayout
        android:id="@+id/header_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/skip2"
            style="@style/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5dp"
            android:clickable="true"
            android:text="@string/skip" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/wfh_8"
        android:layout_width="360dp"
        android:layout_height="270dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/wfh_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container2" />

    <TextView
        android:id="@+id/info_onboarding1"
        android:layout_width="201dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="40dp"
        android:text="@string/info_onboarding2"
        android:textAppearance="@style/info_onboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wfh_8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_onboarding1">

        <ImageView
            android:id="@+id/click_ellipse21"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:clickable="true"
            android:src="@drawable/ellipse_26" />

        <ImageView
            android:id="@+id/click_ellipse22"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginHorizontal="5dp"
            android:clickable="true"
            android:src="@drawable/ellipse_25" />

        <ImageView
            android:id="@+id/click_ellipse23"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:clickable="true"
            android:src="@drawable/ellipse_26" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>